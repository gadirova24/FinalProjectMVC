@model IEnumerable<AdminCollectionVM>
<div class="container-fluid pt-5" style="width:60%">
    <h1>Collection</h1>
    <a asp-action="Create" class="btn btn-gradient-success btn-fw">Create</a>
    <table class="table table-striped mt-5">
        <thead>
            <tr>
                <th> Image </th>
                <th> Name </th>
                <th> Options </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> <img src="~/assets/images/collections/@item.Image" style="width:100px ;height:80px"></td>
                    <td>@item.Name</td>

                    <td style="display: flex; border-bottom: none">
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-light mr-3">Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mr-3">Edit</a>
                        @if (Model.Count() > 1)
                        {
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }

                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>
